# Database connection
DATABASE_URL=mysql://user:password@localhost:3306/keykeeper

# Mail server settings
MAIL_HOST=localhost
MAIL_IMAP_PORT=993
MAIL_IMAP_SECURE=true
MAIL_SMTP_PORT=587
MAIL_SMTP_SECURE=false

# Set to true to enable mail account creation during registration
CREATE_MAIL_ACCOUNTS=true

# Enable mock accounts for development
MOCK_MAIL_ACCOUNTS=true

# Default mail quota in MB
DEFAULT_MAIL_QUOTA=1024

# Password hashing scheme for mail accounts
MAIL_PASSWORD_SCHEME=SHA512-CRYPT

# Use main database for mail tables
USE_MAIN_DB_FOR_MAIL=true

# JWT Secret for authentication
APP_SECRET=your-secret-key-here

# Set this to true in development to use test data
USE_MOCK_DATA=true

# ============================================
# CRYPTO PAYMENT CONFIGURATION
# ============================================

# Payment wallet addresses (public addresses where agents send funds)
POLYGON_PAYMENT_ADDRESS=0xYourPolygonWalletAddress
ETHEREUM_PAYMENT_ADDRESS=0xYourEthereumWalletAddress
SOLANA_PAYMENT_ADDRESS=YourSolanaWalletAddress

# Bitcoin extended public key (for generating unique addresses per payment)
BITCOIN_XPUB=xpub...YourExtendedPublicKey

# Blockchain API keys (optional - improves rate limits)
# Get free keys from: polygonscan.com, etherscan.io
POLYGONSCAN_API_KEY=your-polygonscan-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key

# Solana RPC endpoint (public endpoint works, paid service recommended for production)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com